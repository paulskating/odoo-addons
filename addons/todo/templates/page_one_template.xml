<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="page_one_template">
            <h1>
                Page One
            </h1>
            <p>
                <span>
                    <t t-esc="title"/>
                    <t>
                        <span t-if="count &lt; 5">so little</span>
                        <span t-if="count &gt;= 5">so many</span>
                    </t>
                </span>
            </p>
            <br/>
            <p>
                <t t-foreach="things" t-as="thing">
                    <span><t t-esc="thing.content"/></span>
                    <br/>
                </t>
                <t t-set="a" t-value="100 * 100"/>
            </p>

            <form method="post">
                <input name="val1"/>
                <button type="submit">submit</button>
            </form>

            Val1:<t t-esc="val1"/>

        </template>
    </data>
</openerp>
