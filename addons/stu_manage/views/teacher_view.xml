<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="teacher_view_tree" model="ir.ui.view">
            <field name="name">teacher.view.tree</field>
            <field name="model">teacher</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="te_name"/>
                    <field name="te_age"/>
                    <field name="te_email"/>
                </tree>
            </field>
        </record>
        <record id="teacher_view_form" model="ir.ui.view">
            <field name="name">teacher.view.form</field>
            <field name="model">teacher</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="te_name"/>
                            <field name="te_age"/>
                            <field name="te_email"/>
                            <field name="te_tel"/>
                            <field name="te_lesson"/>
                            <field name="te_student_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>